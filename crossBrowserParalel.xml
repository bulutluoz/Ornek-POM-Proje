<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="cross browser sirali" parallel="tests" thread-count="3" verbose="3">
    <test name="cross chrome">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="crossBrowser.HandleWindows"></class>
        </classes>
    </test>
    <test name="cross firefox">
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="crossBrowser.KeyboardActions"></class>
        </classes>
    </test>
    <test name="cross opera">
        <parameter name="browser" value="opera"></parameter>
        <classes>
            <class name="crossBrowser.MouseActions"></class>
        </classes>
    </test>

</suite>